<%- include('partials/header.ejs')%>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Alterar produto</h1>
        </div>
        <hr>
        <div class="card-body">
            <form action="/produtos/update" method="post">
                
                <label>Nome do produto:</label>
                <input class="form-control" type="text" name="nome" id="nome" value="<%= produto.nome %>" required>
                <label>preco do produto:</label>
                <input class="form-control" type="text" name="preco" id="preco" value="<%= produto.preco %>" required>
                <label>categoria do produto:</label>
                <input class="form-control" type="text" name="categoria" id="categoria" value="<%= produto.categoria %>" required>
                <input class="form-control" type="hidden" name="id" id="id" value="<%= produto.id %>" required>
                <br>
                <input type="submit" class="btn btn-warning" onclick="return confirm('Confirma as alterações para o produto <%=produto.nome %>')" value="Alterar">
            </form>
            <hr>
        </div>
    </div>
</div>

<%-  include('partials/footer.ejs') %>