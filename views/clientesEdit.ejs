<%- include('partials/header.ejs')%>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Alterar cliente</h1>
        </div>
        <hr>
        <div class="card-body">
            <form action="/clientes/update" method="post">
                
                <label>Nome do cliente:</label>
                <input class="form-control" type="text" name="nome" id="nome" value="<%= cliente.nome %>" required>
                <label>cpf do cliente:</label>
                <input class="form-control" type="text" name="cpf" id="cpf" value="<%= cliente.cpf %>" required>
                <label>endereco do cliente:</label>
                <input class="form-control" type="text" name="endereco" id="endereco" value="<%= cliente.endereco %>" required>
                <input class="form-control" type="hidden" name="id" id="id" value="<%= cliente.id %>" required>
                <br>
                <input type="submit" class="btn btn-warning" onclick="return confirm('Confirma as alterações para o cliente <%=cliente.nome %>')" value="Alterar">
            </form>
            <hr>
        </div>
    </div>
</div>

<%-  include('partials/footer.ejs') %>